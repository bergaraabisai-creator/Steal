--[[  
Souls Hub - Steal a Brainrot
Funciones: ESP Brainrot Secret, Discord Webhook, Join automático
]]
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local HttpService = game:GetService("HttpService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- CONFIGURA TU WEBHOOK
local WEBHOOK_URL = "TU_WEBHOOK_DE_DISCORD_AQUI"

-- Función para crear ESP
local function createESP(part, name, price)
    if part:FindFirstChild("ESP") then return end
    local bill = Instance.new("BillboardGui", part)
    bill.Name = "ESP"
    bill.Size = UDim2.new(0,200,0,50)
    bill.Adornee = part
    bill.AlwaysOnTop = true

    local text = Instance.new("TextLabel", bill)
    text.Size = UDim2.new(1,0,1,0)
    text.BackgroundTransparency = 1
    text.TextColor3 = Color3.fromRGB(0,255,0) -- verde brillante para Secret
    text.TextStrokeTransparency = 0
    text.Font = Enum.Font.SourceSansBold
    text.TextScaled = true
    text.Text = name.." | "..price.."/sec"
end

-- Función para enviar Discord Webhook
local function sendDiscord(name, price, placeId, jobId)
    local data = {
        ["content"] = "",
        ["embeds"] = {{
            ["title"] = "Brainrot Secret detectado!",
            ["description"] = "**Nombre:** "..name.."\n**Precio/sec:** "..price.."\n[Unirse al servidor](https://souls-hub-joiner.github.io/?placeId="..placeId.."&jobId="..jobId..")",
            ["color"] = 65280 -- verde
        }}
    }
    local jsonData = HttpService:JSONEncode(data)
    pcall(function()
        HttpService:PostAsync(WEBHOOK_URL, jsonData, Enum.HttpContentType.ApplicationJson)
    end)
end

-- Escaneo de Brainrots
RunService.RenderStepped:Connect(function()
    for _, obj in pairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and obj:FindFirstChild("Name") and obj:FindFirstChild("Price") then
            local name = obj.Name
            local price = obj.Price.Value
            if name:lower():find("secret") then
                createESP(obj.PrimaryPart or obj:FindFirstChildWhichIsA("BasePart"), name, price)
                -- Obtener PlaceId y JobId del servidor actual
                local placeId = game.PlaceId
                local jobId = game.JobId
                sendDiscord(name, price, placeId, jobId)
            end
        end
    end
end)
